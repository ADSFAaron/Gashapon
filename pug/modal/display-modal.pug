//- 檢視
.modal.fade#display-modal(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1')
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5.modal-title 檢視項目
        //- button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body.modal-body-display
        label.repeat-draw
          input#repeat-draw(type="checkbox", name="", checked, onclick='repeatDraw()')
          p 重複抽獎
        .display-list-group
          .tab-list 
            button.tab.active(data-tab-page-id="#gacha-list") 扭蛋清單
            button.tab(data-tab-page-id="#history-list") 扭蛋紀錄

          ul.gacha-list.tab-page.active#gacha-list
            li.item 項目

          ul.history-list.tab-page#history-list
            li.item 暫無紀錄


        .modal-no-data
          .no-data-content(onclick='showModal("#import-modal")')
            .gacha-icon
            p 目前尚未匯入，點擊匯入

      .modal-footer
        button.btn.modal-footer-btn.secondary-btn#display-modal-reset(type='button' onclick='showModal("#reset-modal")' ) 重置
        button.btn.modal-footer-btn(type='button' onclick='closeModal()') 確認
